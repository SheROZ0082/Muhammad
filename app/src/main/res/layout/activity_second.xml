<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/img5">


    <ImageView
        android:id="@+id/img_gogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="130dp"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img29"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/resultText"
        android:background="@color/black"
        android:text="ИМЯ_ДЖОДЖО Возраст 17 не женат характер спокойный жеский "
        android:textSize="20sp"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="175dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvstnd_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ИМЯ СТЕНДА-STAR PLATINUM"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@color/black"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btn_start_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="АКТИВИРОВАТЬ"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="240dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>